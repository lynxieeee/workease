{
    "compilerOptions": {
      "baseUrl": "./",  // 设置项目根目录
      "paths": {
        "@/*": ["src/*"]  // 添加路径别名配置
      },
      "target": "ES6",
      "module": "ES6",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true
    },
    "include": ["src"]
  }
  